<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
 <hibernate-mapping>
 	<class name="com.school.employee.bean.StartOfDay" table="SOD_RCRD">
 		<meta attribute="class-description">
 			Start of Day POJO
 		</meta>
 		<id				name="workDay"				column="WORK_DAY"	type="calendar_date"></id>
 		<timestamp 		name="version"      		column="RCRD_VER" source="db"></timestamp>
 		<property		name="employeeID"			column="ADMIN_ID"></property>
 		<property		name="timestamp"			column="TMSTMP"></property>
 	</class>
 </hibernate-mapping>